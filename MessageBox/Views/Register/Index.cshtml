@model DTO.AppUserDtos.RegisterAppUserDto
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container m-5">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <label>Adınız</label>
            <input type="text" class="form-control" asp-for="Name" />
            <br />
            <label>Soyadınız</label>
            <input type="text" class="form-control" asp-for="Surname" />
            <br />
            <label>Kullanıcı Adınız</label>
            <input type="text" class="form-control" asp-for="UserName" />
            <br />
            <label>Email</label>
            <input type="text" class="form-control" asp-for="Email" />
            <br />
            <label>Şifre</label>
            <input type="text" class="form-control" asp-for="Password" />
            <br />
            <label>Şifre Tekrar</label>
            <input type="text" class="form-control" asp-for="ConfirmPassword" />
            <br />
            <button class="btn btn-info">Kayıt Ol</button>
        </form>

    </div>
</body>
</html>

